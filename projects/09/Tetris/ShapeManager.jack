class ShapeManager {

    field Shape current;

    constructor ShapeManager new(Grid grid) {
        let current = Shape.new(grid);
        return this;
    }

    method boolean render() {
        var Grid g;
        var boolean status;

        let status = true;

        if (~current.render()) {
            let g = current.getGrid();
            do current.dispose();
            let status = g.update();
            let current = Shape.new(g);
        }

        return status;
    }
}
