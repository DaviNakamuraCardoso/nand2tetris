class Game {

    field Grid grid;
    field ShapeManager sm;

    constructor Game new() {

        let grid = Grid.new(31, 15);
        let sm = ShapeManager.new(grid);
        return this;
    }

    method void render() {
        do grid.render();
        return;
    }

    method void loop() {

        while (true) {

            do grid.render();
            do sm.render();
            do Sys.wait(300);
        }
        return;
    }
}
